<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.scottlindley.toolbarsandmenuslab.PandoraToolbarActivity">>
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/pandora_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1950be"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/dislike_button"
                    android:src="@drawable/ic_thumb_down_white_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"/>
                <ImageView
                    android:id="@+id/like_button"
                    android:src="@drawable/ic_thumb_up_white_24dp"
                    android:layout_width="30dp"
                    android:tint="#ffa200"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/dislike_button"
                    android:layout_marginLeft="24dp"/>
                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/like_button"
                    android:progressBackgroundTint="#000000"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/skip_button"
                    android:src="@drawable/ic_skip_next_white_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignRight="@id/seek_bar"/>
                <ImageView
                    android:id="@+id/pause_button"
                    android:src="@android:drawable/ic_media_pause"
                    android:backgroundTint="#ffffff"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@id/skip_button"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/settings"
                android:src="@drawable/ic_settings_white_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/profile"
                android:src="@drawable/ic_account_circle_white_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/settings"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/comments"
                android:src="@drawable/ic_comment_white_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/profile"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
        
    
</android.support.design.widget.CoordinatorLayout>
