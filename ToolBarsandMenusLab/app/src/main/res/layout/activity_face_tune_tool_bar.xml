<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#94dcb5">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_face_tune_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.scottlindley.toolbarsandmenuslab.FaceTuneToolBar">

        <Button
            android:id="@+id/next_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to next toolbar activity"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/facetune_toolbar"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="34dp"
            android:paddingLeft="34dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/move_icon"
                    android:src="@drawable/ic_zoom_out_map_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/move_icon"
                    android:layout_centerHorizontal="true"
                    android:text="Move"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/brush_icon"
                    android:src="@drawable/ic_brush_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brush_icon"
                    android:layout_centerHorizontal="true"
                    android:text="Whiten"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/undo_icon"
                    android:src="@drawable/ic_undo_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/undo_icon"
                    android:layout_centerHorizontal="true"
                    android:text="Erase"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/help_icon"
                    android:src="@drawable/ic_help_outline_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/help_icon"
                    android:layout_centerHorizontal="true"
                    android:text="Help"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.CoordinatorLayout>
